# Sam Voice Agent - Environment Variables
# Copy this to .env and fill in your values

# ============================================
# MVP: Hardcoded user (remove in production)
# ============================================
USER_ID=mvp-user-001
USER_NAME=John Doe
USER_PHONE=+15551234567

# ============================================
# Google AI - Gemini
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Twilio
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15559876543

# ============================================
# Supabase (Production)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ============================================
# Local Development (Docker)
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sam_dev
REDIS_URL=redis://localhost:6379

# ============================================
# Server Configuration
# ============================================
VOICE_ENGINE_PORT=8000
DASHBOARD_PORT=3000

# ============================================
# Local Development Tunnel
# ============================================
# Use Cloudflare Tunnel to expose local server to Twilio
# cloudflared tunnel --url http://localhost:8000
TUNNEL_URL=https://your-tunnel-id.trycloudflare.com
